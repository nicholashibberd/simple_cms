<h1>Sign in</h1>
<div>
	<%= form_for(:user, :url => validate_users_path) do |f| %> 
		<div class="field">
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br /> 
			<%= f.password_field :password %>
		</div> 
		<div>
			<%= f.submit :class => 'btn btn-success' "Sign in" %> 
		</div>
		<% end %> 
</div>