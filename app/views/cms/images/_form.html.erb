<%= form_for(@image, {:html => {:multipart => true}}) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
	<div class="field">
    <%= f.label :image_file %>
    <%= f.file_field :cover_image %>
  </div>
	<% unless @image.new_record? %>
	 	<div>
			<%= image_tag @image.cover_image.thumb('x100').url %>
		</div>
	<% end %>

	<div class="button confirm_button">
  	<%= f.submit :class => 'btn btn-success' %>
	</div>
<% end %>
