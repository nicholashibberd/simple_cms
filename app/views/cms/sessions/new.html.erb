<div class="page_header">
	<h1>Sign in</h1>
</div>

<section class="page_content">
	<%= form_for(:session, :url => sessions_path) do |f| %> 
		<div class="field">
			<%= f.label :email %><br />
			<%= f.text_field :email %>
		</div>
		<div class="field">
			<%= f.label :password %><br /> 
			<%= f.password_field :password %>
		</div> 
		<div>
			<%= f.submit 'Sign in', :class => 'btn btn-success' %> 
		</div>
	<% end %>
</section>