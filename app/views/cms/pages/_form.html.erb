<%= form_for @page do |f| %>
	<div class='field'>
	   <div>
	    <%= f.label :name %>
	  </div>
	   <div>
	    <%= f.text_field :name %>
	  </div>
	</div>
	<div class='field'>
	   <div>
	    <%= f.label :title_tag %>
	  </div>
	   <div>
	    <%= f.text_field :title %>
	  </div>
	</div>
	<div class='field'>
	  <%= f.submit :class => 'btn btn-success' 'Save', :class => 'btn btn-success' %>
	</div>
<% end %>